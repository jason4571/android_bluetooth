<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="match_parent"
        android:layout_weight="1.5"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonOn"
                android:layout_height="80dp"
                android:layout_width="160dp"
                android:text="連結"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:textSize="45sp" />

            <Button
                android:id="@+id/buttonOff"
                android:layout_height="80dp"
                android:layout_width="160dp"
                android:text="斷開"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/buttonOn"
                android:layout_toEndOf="@+id/buttonOn"

                android:layout_weight="1"
                android:textSize="45sp" />

            <Button
                android:text="儲存"
                android:layout_height="80dp"
                android:layout_width="160dp"
                android:layout_toRightOf="@+id/buttonOff"
                android:id="@+id/btn_stor"
                android:textSize="45sp" />

            <Button
                android:text="警報"
                android:layout_height="80dp"
                android:layout_width="160dp"
                android:layout_toRightOf="@+id/btn_stor"
                android:id="@+id/btn_dia"
                android:textSize="45sp" />

            <Button
                android:text="名稱"
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/btn_dia"
                android:layout_toEndOf="@+id/btn_dia"
                android:id="@+id/btn_temple"
                android:textSize="45sp"/>
        </RelativeLayout>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_weight="1.5"
        android:layout_height="wrap_content">

        <TextView
            android:text="細懸浮微粒:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:id="@+id/txtvideo_pm2d5"
            android:textSize="70sp"
            android:layout_below="@+id/buttonOff"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_weight="9"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="50px"
                android:layout_y="50px"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/txtv_respm2d5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_weight="5"
                android:gravity="center"
                android:text="0"
                android:textSize="620sp" />

        </RelativeLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:text="空氣狀況"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtv_slogan"
                android:textSize="60sp"
                android:layout_weight="5"
                android:layout_row="3"
                android:layout_column="1"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </TableRow>

</TableLayout>